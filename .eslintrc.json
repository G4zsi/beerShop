{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "max-lines": [
            "error",
            { "max": 200, "skipBlankLines": true, "skipComments": true }
        ],
        "no-cond-assign": 1,
        "no-const-assign": "error",
        "no-duplicate-imports": "error",
        "no-fallthrough": "error",
        "no-irregular-whitespace": "error"

    }
}
